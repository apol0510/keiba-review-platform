---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SiteCard from '../../../components/SiteCard.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import EmptyState from '../../../components/EmptyState.astro';
import { getSitesWithStats, categoryLabels } from '../../../lib/airtable';

const category = 'nankan';

// クエリパラメータ取得
const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get('q') || '';
const sortBy = url.searchParams.get('sort') || 'popular';

// データ取得（カテゴリでフィルタ）
let sites = await getSitesWithStats();
sites = sites.filter(site => site.category === category);

// 検索フィルタ
if (searchQuery) {
  sites = sites.filter(
    (site) =>
      site.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
      site.description?.toLowerCase().includes(searchQuery.toLowerCase())
  );
}

// ソート
switch (sortBy) {
  case 'newest':
    sites.sort((a, b) => new Date(b.created_at).getTime() - new Date(a.created_at).getTime());
    break;
  case 'rating':
    sites.sort((a, b) => b.average_rating - a.average_rating);
    break;
  case 'reviews':
    sites.sort((a, b) => b.review_count - a.review_count);
    break;
  default: // popular
    sites.sort((a, b) => b.review_count - a.review_count);
}

const breadcrumbItems = [
  { label: 'サイト一覧', href: '/keiba-yosou/' },
  { label: categoryLabels[category] }
];
---

<BaseLayout
  title={`${categoryLabels[category]}の予想サイト`}
  description={`${categoryLabels[category]}専門の競馬予想サイト一覧。大井・川崎・船橋・浦和の予想情報を提供するサイトを比較。`}
>
  <div class="max-w-6xl mx-auto px-4 py-8">
    <Breadcrumb items={breadcrumbItems} />

    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-4 md:mb-0">
        {categoryLabels[category]}の予想サイト
        {searchQuery && <span class="text-lg font-normal text-gray-600">「{searchQuery}」の検索結果</span>}
      </h1>
      <div class="text-sm text-gray-600">{sites.length}件のサイト</div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-md p-4 mb-8">
      <form method="get" class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
          <input
            type="text"
            name="q"
            value={searchQuery}
            placeholder="サイト名で検索..."
            class="form-input"
          />
        </div>
        <div class="flex gap-2">
          <label class="text-sm text-gray-600 flex items-center">
            並び替え:
          </label>
          <select name="sort" class="form-input w-auto">
            <option value="popular" selected={sortBy === 'popular'}>人気順</option>
            <option value="rating" selected={sortBy === 'rating'}>評価順</option>
            <option value="reviews" selected={sortBy === 'reviews'}>口コミ数順</option>
            <option value="newest" selected={sortBy === 'newest'}>新着順</option>
          </select>
          <button type="submit" class="btn-primary">絞り込む</button>
        </div>
      </form>
    </div>

    <!-- Category Links -->
    <div class="flex flex-wrap gap-2 mb-8">
      <a
        href="/keiba-yosou/"
        class="px-4 py-2 rounded-full border-2 border-gray-300 bg-white text-gray-700 text-sm font-medium hover:border-blue-400 hover:text-blue-600 transition-colors"
      >
        すべて
      </a>
      {
        Object.entries(categoryLabels).map(([key, label]) => (
          <a
            href={`/keiba-yosou/${key}/`}
            class={`px-4 py-2 rounded-full border-2 text-sm transition-colors ${
              key === category
                ? 'border-blue-600 bg-white text-blue-600 font-bold shadow-sm'
                : 'border-gray-300 bg-white text-gray-700 font-medium hover:border-blue-400 hover:text-blue-600'
            }`}
          >
            {label}
          </a>
        ))
      }
    </div>

    <!-- Site Grid -->
    {
      sites.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {sites.map((site) => (
            <SiteCard site={site} />
          ))}
        </div>
      ) : searchQuery ? (
        <EmptyState
          icon="search"
          title="検索結果が見つかりません"
          description={`「${searchQuery}」に一致するサイトが見つかりませんでした。別のキーワードで検索してみてください。`}
          actionText="すべてのサイトを見る"
          actionHref="/keiba-yosou/"
        />
      ) : (
        <EmptyState
          icon="document"
          title="まだサイトが登録されていません"
          description={`現在、${categoryLabels[category]}のサイトは登録されていません。しばらくお待ちください。`}
          actionText="すべてのサイトを見る"
          actionHref="/keiba-yosou/"
        />
      )
    }
  </div>
</BaseLayout>
