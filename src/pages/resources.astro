---
import BaseLayout from '../layouts/BaseLayout.astro';

const officialLinks = [
  {
    category: '中央競馬',
    items: [
      { name: 'JRA公式サイト', url: 'https://www.jra.go.jp/', description: '日本中央競馬会の公式サイト。レース情報、出馬表、オッズなど' },
      { name: 'JRA-VAN', url: 'https://jra-van.jp/', description: '競馬データや映像、便利ツールを提供' },
      { name: 'netkeiba', url: 'https://www.netkeiba.com/', description: '競馬総合情報サイト。レース情報、予想、データベース' },
    ],
  },
  {
    category: '地方競馬（南関東）',
    items: [
      { name: '南関東4競馬場', url: 'https://www.nankankeiba.com/', description: '大井・川崎・船橋・浦和の公式情報' },
      { name: '大井競馬場', url: 'https://www.tokyocitykeiba.com/', description: 'TCK（東京シティ競馬）公式サイト' },
      { name: '川崎競馬場', url: 'https://www.kawasaki-keiba.jp/', description: '川崎競馬場公式サイト' },
      { name: '船橋競馬場', url: 'https://www.f-keiba.com/', description: '船橋競馬場公式サイト' },
      { name: '浦和競馬場', url: 'https://www.urawa-keiba.jp/', description: '浦和競馬場公式サイト' },
    ],
  },
  {
    category: '地方競馬（その他）',
    items: [
      { name: '地方競馬全国協会（NAR）', url: 'https://www.keiba.go.jp/', description: '地方競馬の公式情報' },
      { name: '園田・姫路競馬', url: 'https://www.sonoda-himeji.jp/', description: '兵庫県の地方競馬' },
      { name: '金沢競馬', url: 'https://www.kanazawakeiba.com/', description: '石川県の地方競馬' },
      { name: '名古屋競馬', url: 'https://www.nagoyakeiba.com/', description: '愛知県の地方競馬' },
      { name: '高知競馬', url: 'https://www.keiba.or.jp/', description: '高知県の地方競馬' },
      { name: '佐賀競馬', url: 'https://www.sagakeiba.net/', description: '佐賀県の地方競馬' },
    ],
  },
  {
    category: '馬券購入',
    items: [
      { name: 'IPAT（JRA）', url: 'https://www.ipat.jra.go.jp/', description: '中央競馬のネット投票' },
      { name: 'SPAT4（地方競馬）', url: 'https://www.spat4.jp/', description: '地方競馬のネット投票' },
      { name: 'オッズパーク', url: 'https://www.oddspark.com/', description: '地方競馬のネット投票・情報サイト' },
    ],
  },
  {
    category: 'データベース',
    items: [
      { name: 'JBISサーチ', url: 'https://www.jbis.or.jp/', description: '競走馬の血統・成績データベース' },
      { name: '競馬ラボ', url: 'https://www.keibalab.jp/', description: 'レース結果・データ分析' },
    ],
  },
  {
    category: '便利ツール',
    items: [
      { name: 'JRA馬券フォーメーション計算', url: 'https://www.jra.go.jp/kouza/useful/mark_form_tensu/', description: '買い目点数の自動計算' },
      { name: 'JRA馬券点数早見表', url: 'https://www.jra.go.jp/kouza/useful/hayamihyo/', description: 'BOX・流し点数の早見表' },
    ],
  },
];
---

<BaseLayout
  title="競馬関連リンク集"
  description="競馬に関する公式サイト、馬券購入サービス、データベース、便利ツールなどをまとめました。"
>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- ヘッダー -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">競馬関連リンク集</h1>
      <p class="text-gray-600">
        競馬予想サイト以外の、公式情報や便利なサービスをまとめました。
      </p>
    </div>

    <!-- 注意書き -->
    <div class="bg-blue-50 border-l-4 border-blue-600 p-4 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">
            このページについて
          </h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>
              以下のサイトは<strong>予想サイトではありません</strong>。公式情報の提供や馬券購入サービスです。
              予想サイトの口コミ・評価を見たい方は、<a href="/keiba-yosou/" class="underline font-medium">サイト一覧</a>をご覧ください。
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- リンク集 -->
    <div class="space-y-8">
      {officialLinks.map((section) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
            <h2 class="text-xl font-bold text-white">{section.category}</h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              {section.items.map((item) => (
                <a
                  href={item.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block p-4 border border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-colors group"
                >
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h3 class="font-bold text-gray-900 group-hover:text-blue-600 flex items-center gap-2">
                        {item.name}
                        <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      </h3>
                      <p class="text-sm text-gray-600 mt-1">{item.description}</p>
                      <p class="text-xs text-gray-400 mt-2 break-all">{item.url}</p>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- 予想サイトへのリンク -->
    <div class="mt-12 bg-gradient-to-r from-green-50 to-blue-50 border-2 border-green-200 rounded-lg p-6 text-center">
      <h2 class="text-xl font-bold text-gray-900 mb-2">
        競馬予想サイトをお探しですか？
      </h2>
      <p class="text-gray-600 mb-4">
        実際のユーザーによる口コミ・評価で、信頼できる予想サイトを見つけましょう
      </p>
      <a
        href="/keiba-yosou/"
        class="btn-primary inline-block"
      >
        予想サイト一覧を見る
      </a>
    </div>
  </div>
</BaseLayout>
