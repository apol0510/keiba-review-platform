---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteCard from '../components/SiteCard.astro';
import ReviewCard from '../components/ReviewCard.astro';
import { getSitesWithStats, getLatestReviews, categoryLabels } from '../lib/airtable';

// データ取得（並列実行でさらに高速化）
const [sites, latestReviews] = await Promise.all([
  getSitesWithStats(),
  getLatestReviews(6)
]);

// DisplayPriority順でソート（降順）、同じ優先度の場合はCreatedAt順（降順）
sites.sort((a, b) => {
  // DisplayPriorityで降順ソート
  const priorityDiff = (b.display_priority || 50) - (a.display_priority || 50);
  if (priorityDiff !== 0) return priorityDiff;

  // 同じ優先度の場合、作成日時で降順ソート
  return new Date(b.created_at).getTime() - new Date(a.created_at).getTime();
});

// カテゴリ別にサイトをグループ化
const categories = ['nankan', 'chuo', 'chihou'] as const;
const topSites = sites.slice(0, 10);

// 構造化データ（WebSiteスキーマ強化版）
const siteUrl = import.meta.env.SITE_URL || 'https://keiba-review.com';
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: '競馬予想サイト口コミ',
  alternateName: '競馬予想サイトレビュープラットフォーム',
  url: siteUrl,
  description: '競馬予想サイトの口コミ・評判を集約。ユーザーの生の声で信頼できるサイトを見つけよう。南関競馬・中央競馬・地方競馬の予想サイトを徹底比較。',
  inLanguage: 'ja-JP',
  publisher: {
    '@type': 'Organization',
    name: '競馬予想サイト口コミ',
    url: siteUrl,
    logo: {
      '@type': 'ImageObject',
      url: `${siteUrl}/og/default.png`
    }
  },
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: `${siteUrl}/keiba-yosou/?q={search_term_string}`,
    },
    'query-input': 'required name=search_term_string',
  },
  hasPart: [
    {
      '@type': 'WebPage',
      name: '総合ランキング',
      url: `${siteUrl}/ranking/`,
      description: '競馬予想サイトの総合ランキングTOP30'
    },
    {
      '@type': 'WebPage',
      name: '中央競馬ランキング',
      url: `${siteUrl}/ranking/chuo/`,
      description: 'JRA・中央競馬に強い予想サイトランキング'
    },
    {
      '@type': 'WebPage',
      name: '南関競馬ランキング',
      url: `${siteUrl}/ranking/nankan/`,
      description: '大井・川崎・船橋・浦和に特化した予想サイトランキング'
    },
    {
      '@type': 'WebPage',
      name: '地方競馬ランキング',
      url: `${siteUrl}/ranking/chihou/`,
      description: '園田・金沢・名古屋・高知など地方競馬場に強い予想サイトランキング'
    }
  ]
};
---

<BaseLayout title="トップ">
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 text-white py-16 md:py-24 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-64 h-64 md:w-96 md:h-96 bg-blue-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-64 h-64 md:w-96 md:h-96 bg-purple-500 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-6xl mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-blue-500/10 backdrop-blur-sm border border-blue-400/20 rounded-full px-3 py-1.5 md:px-4 md:py-2 mb-6 md:mb-8">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
          <span class="text-xs md:text-sm font-medium text-blue-100">信頼できる口コミプラットフォーム</span>
        </div>

        <!-- Main Heading -->
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-4 md:mb-6 leading-tight px-2">
          <span class="bg-gradient-to-r from-white via-blue-100 to-white bg-clip-text text-transparent">
            信頼できる
          </span>
          <br />
          <span class="bg-gradient-to-r from-blue-300 via-purple-300 to-blue-300 bg-clip-text text-transparent">
            競馬予想サイトを見つけよう
          </span>
        </h1>

        <p class="text-base md:text-lg lg:text-xl text-slate-300 mb-8 md:mb-10 leading-relaxed px-4">
          ユーザーの生の声を集めた口コミプラットフォーム<br class="hidden sm:block" />
          あなたにぴったりの競馬予想サイトを見つけましょう
        </p>

        <!-- Search Form -->
        <div class="max-w-2xl mx-auto px-2">
          <form action="/keiba-yosou/" method="get" class="relative">
            <div class="relative flex flex-col sm:flex-row items-stretch sm:items-center bg-white/10 backdrop-blur-md border border-white/20 rounded-xl md:rounded-2xl shadow-2xl hover:shadow-blue-500/25 transition-all duration-300">
              <div class="relative flex-1 flex items-center">
                <svg class="absolute left-4 md:left-5 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <input
                  type="text"
                  name="q"
                  placeholder="サイト名で検索..."
                  class="w-full pl-12 md:pl-14 pr-4 py-4 md:py-5 bg-transparent text-white placeholder-slate-400 focus:outline-none text-base md:text-lg"
                />
              </div>
              <button
                type="submit"
                class="m-2 bg-gradient-to-r from-blue-500 to-purple-500 hover:from-blue-600 hover:to-purple-600 text-white px-6 md:px-8 py-3 rounded-lg md:rounded-xl font-semibold transition-all duration-300 shadow-lg hover:shadow-purple-500/50 active:scale-95 md:hover:scale-105"
              >
                検索
              </button>
            </div>
          </form>

          <!-- Quick Links -->
          <div class="flex flex-wrap justify-center items-center gap-2 md:gap-3 mt-4 md:mt-6 px-2">
            <span class="text-xs md:text-sm text-slate-400">人気:</span>
            {categories.map(cat => (
              <a
                href={`/keiba-yosou/${cat}/`}
                class="text-xs md:text-sm text-blue-300 hover:text-blue-200 hover:underline transition-colors"
              >
                {categoryLabels[cat]}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="bg-gradient-to-b from-slate-50 to-white py-12 md:py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-3 gap-4 md:gap-8">
        <div class="bg-white rounded-xl md:rounded-2xl p-4 md:p-6 shadow-lg hover:shadow-xl transition-shadow text-center border border-slate-100">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-2">
            {sites.length}
          </div>
          <div class="text-xs md:text-sm text-slate-600 font-medium">登録サイト</div>
        </div>
        <div class="bg-white rounded-xl md:rounded-2xl p-4 md:p-6 shadow-lg hover:shadow-xl transition-shadow text-center border border-slate-100">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-2">
            {sites.reduce((sum, s) => sum + s.review_count, 0)}
          </div>
          <div class="text-xs md:text-sm text-slate-600 font-medium">口コミ数</div>
        </div>
        <div class="bg-white rounded-xl md:rounded-2xl p-4 md:p-6 shadow-lg hover:shadow-xl transition-shadow text-center border border-slate-100">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-2">
            {categories.length}
          </div>
          <div class="text-xs md:text-sm text-slate-600 font-medium">カテゴリ</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Ranking CTA Section -->
  <section class="py-12 md:py-16 bg-gradient-to-r from-yellow-50 via-amber-50 to-orange-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="bg-white rounded-2xl md:rounded-3xl p-6 md:p-10 shadow-2xl border-2 border-amber-200">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-flex items-center gap-2 bg-amber-100 rounded-full px-4 py-2 mb-4">
            <span class="text-2xl">🏆</span>
            <span class="text-sm font-bold text-amber-900">最新ランキング</span>
          </div>
          <h2 class="text-2xl md:text-4xl font-bold text-slate-900 mb-4">
            信頼性の高い<br class="sm:hidden" />
            <span class="bg-gradient-to-r from-amber-500 to-orange-500 bg-clip-text text-transparent">
              ランキングで比較
            </span>
          </h2>
          <p class="text-base md:text-lg text-slate-600 mb-8 leading-relaxed">
            口コミ評価と投稿数から算出した信頼性の高いランキングです。<br class="hidden sm:block" />
            ユーザーの生の声をもとに、本当に使える競馬予想サイトを厳選しました。
          </p>
          <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center">
            <a
              href="/ranking/"
              class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105 active:scale-95"
            >
              <span class="text-2xl">🏆</span>
              総合ランキングTOP30
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
          <div class="flex flex-wrap justify-center gap-2 md:gap-3 mt-6">
            <span class="text-sm text-slate-500">カテゴリ別:</span>
            <a href="/ranking/chuo/" class="text-sm text-blue-600 hover:text-blue-700 hover:underline font-medium transition-colors">
              中央競馬
            </a>
            <span class="text-slate-300">|</span>
            <a href="/ranking/nankan/" class="text-sm text-blue-600 hover:text-blue-700 hover:underline font-medium transition-colors">
              南関競馬
            </a>
            <span class="text-slate-300">|</span>
            <a href="/ranking/chihou/" class="text-sm text-blue-600 hover:text-blue-700 hover:underline font-medium transition-colors">
              地方競馬
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Sites Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex items-center justify-between mb-8 md:mb-10">
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-2">人気サイトランキング</h2>
          <p class="text-sm md:text-base text-slate-600">ユーザー評価の高いサイトをチェック</p>
        </div>
        <a href="/keiba-yosou/" class="flex items-center gap-1 text-blue-600 hover:text-blue-700 text-sm md:text-base font-medium transition-colors group">
          すべて見る
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      {
        topSites.length > 0 ? (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-6">
            {topSites.map((site, index) => (
              <div class="relative">
                {index < 3 && (
                  <div
                    class={`absolute -top-2 -left-2 w-9 h-9 rounded-full flex items-center justify-center text-white font-bold z-10 shadow-lg ${
                      index === 0
                        ? 'bg-gradient-to-br from-yellow-400 to-amber-500'
                        : index === 1
                          ? 'bg-gradient-to-br from-slate-300 to-slate-400'
                          : 'bg-gradient-to-br from-amber-600 to-amber-700'
                    }`}
                  >
                    {index + 1}
                  </div>
                )}
                <SiteCard site={site} />
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-12 bg-slate-50 rounded-2xl">
            <p class="text-slate-600">まだサイトが登録されていません</p>
          </div>
        )
      }
    </div>
  </section>

  <!-- Latest Reviews Section -->
  <section class="py-12 md:py-16 bg-gradient-to-br from-slate-50 to-blue-50/30">
    <div class="max-w-6xl mx-auto px-4">
      <div class="mb-8 md:mb-10 text-center">
        <div class="inline-flex items-center gap-2 bg-blue-100 rounded-full px-4 py-2 mb-4">
          <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path>
            <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"></path>
          </svg>
          <span class="text-sm font-semibold text-blue-700">リアルな声</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-3">
          最新の口コミ
        </h2>
        <p class="text-base md:text-lg text-slate-600 max-w-2xl mx-auto">
          実際に利用したユーザーの生の声をお届けします。<br class="hidden md:block" />
          信頼できる情報で、あなたにぴったりのサイトを見つけましょう。
        </p>
      </div>
      {
        latestReviews.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
            {latestReviews.map((review) => (
              <ReviewCard review={review} showSiteName={true} />
            ))}
          </div>
        ) : (
          <div class="text-center py-12 bg-white rounded-2xl border border-slate-200">
            <p class="text-slate-600">まだ口コミがありません</p>
          </div>
        )
      }
    </div>
  </section>

  <!-- Category Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="mb-8 md:mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-2">カテゴリから探す</h2>
        <p class="text-sm md:text-base text-slate-600">競馬の種類別にサイトを探す</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
        {
          categories.map((category) => {
            const categorySites = sites.filter((s) => s.category === category);
            const reviewCount = categorySites.reduce((sum, s) => sum + s.review_count, 0);
            return (
              <a
                href={`/keiba-yosou/${category}/`}
                class="group block bg-gradient-to-br from-white to-slate-50 rounded-xl md:rounded-2xl shadow-lg hover:shadow-2xl p-6 md:p-8 transition-all duration-300 border border-slate-100 hover:border-blue-200 hover:-translate-y-1"
              >
                <div class={`w-14 h-14 md:w-16 md:h-16 rounded-2xl flex items-center justify-center mb-4 md:mb-6 badge-${category} shadow-lg group-hover:scale-110 transition-transform duration-300`}>
                  <svg class="w-7 h-7 md:w-8 md:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                    />
                  </svg>
                </div>
                <h3 class="text-lg md:text-xl font-bold text-slate-900 mb-2 group-hover:text-blue-600 transition-colors">
                  {categoryLabels[category]}
                </h3>
                <p class="text-sm md:text-base text-slate-600">
                  {categorySites.length}サイト・{reviewCount}件の口コミ
                </p>
              </a>
            );
          })
        }
      </div>
    </div>
  </section>

  <!-- SEO Content Section -->
  <section class="bg-white py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="prose prose-lg max-w-none">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          競馬予想サイトの口コミ・評判を徹底比較
        </h2>

        <p class="text-gray-700 leading-relaxed mb-6">
          当サイトは、実際に競馬予想サイトを利用したユーザーの口コミ・評判を集約した日本最大級の比較プラットフォームです。南関競馬（大井・川崎・船橋・浦和）、中央競馬（JRA）、地方競馬など、様々なカテゴリの予想サイトを網羅しています。
        </p>

        <h3 class="text-2xl font-bold text-gray-900 mb-4 mt-8">
          信頼できる競馬予想サイトの選び方
        </h3>

        <p class="text-gray-700 leading-relaxed mb-4">
          競馬予想サイトを選ぶ際は、以下のポイントを確認することが重要です：
        </p>

        <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
          <li><strong>口コミ評価と投稿数：</strong>多くのユーザーから支持されているサイトは信頼性が高い傾向にあります</li>
          <li><strong>的中実績の透明性：</strong>的中率や回収率を公開し、実績を証明できるサイトを選びましょう</li>
          <li><strong>料金体系の明確さ：</strong>無料予想の有無や有料プランの内容が明確に記載されているか確認しましょう</li>
          <li><strong>サポート体制：</strong>問い合わせへの対応が迅速で丁寧なサイトは信頼できます</li>
          <li><strong>個人情報の保護：</strong>プライバシーポリシーが明記され、情報管理が適切なサイトを選びましょう</li>
        </ul>

        <h3 class="text-2xl font-bold text-gray-900 mb-4 mt-8">
          カテゴリ別おすすめ競馬予想サイト
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
          <a href="/keiba-yosou/nankan/" class="block p-4 border-2 border-blue-200 rounded-lg hover:border-blue-400 hover:bg-blue-50 transition-colors">
            <h4 class="font-bold text-blue-600 mb-2">南関競馬</h4>
            <p class="text-sm text-gray-600">大井・川崎・船橋・浦和競馬の予想に特化</p>
          </a>
          <a href="/keiba-yosou/chuo/" class="block p-4 border-2 border-blue-200 rounded-lg hover:border-blue-400 hover:bg-blue-50 transition-colors">
            <h4 class="font-bold text-blue-600 mb-2">中央競馬</h4>
            <p class="text-sm text-gray-600">JRA重賞レースや平場レースの予想</p>
          </a>
          <a href="/keiba-yosou/chihou/" class="block p-4 border-2 border-blue-200 rounded-lg hover:border-blue-400 hover:bg-blue-50 transition-colors">
            <h4 class="font-bold text-blue-600 mb-2">地方競馬</h4>
            <p class="text-sm text-gray-600">全国の地方競馬場の予想情報</p>
          </a>
        </div>

        <h3 class="text-2xl font-bold text-gray-900 mb-4 mt-8">
          口コミ投稿のお願い
        </h3>

        <p class="text-gray-700 leading-relaxed mb-6">
          当サイトでは、実際に競馬予想サイトを利用された方の口コミを募集しています。あなたの体験が、これから予想サイトを利用しようとしている方の参考になります。的中実績、料金、サポート対応など、率直な感想をお聞かせください。すべての口コミは承認制で、適切な内容であることを確認してから公開しています。
        </p>

        <h2 class="text-3xl font-bold text-gray-900 mb-6 mt-12">
          競馬予想サイトランキングTOP10で人気サイトを徹底比較
        </h2>

        <p class="text-gray-700 leading-relaxed mb-4">
          当サイトでは、ユーザーの口コミ評価と投稿数から算出した<a href="/ranking/" class="text-blue-600 hover:text-blue-700 underline font-semibold">独自のランキングスコア</a>で、信頼性の高い競馬予想サイトをランキング化しています。ランキングは毎日更新され、常に最新の情報をお届けしています。
        </p>

        <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
