---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  message?: string;
}

const { size = 'md', message } = Astro.props;

const sizeClasses = {
  sm: 'w-5 h-5',
  md: 'w-8 h-8',
  lg: 'w-12 h-12',
};
---

<div class="flex flex-col items-center justify-center gap-3">
  <div class="relative">
    <div
      class={`${sizeClasses[size]} border-4 border-slate-200 border-t-blue-600 rounded-full animate-spin`}
    >
    </div>
  </div>
  {message && <p class="text-sm text-slate-600 animate-pulse">{message}</p>}
</div>
