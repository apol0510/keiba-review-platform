---
import type { PricingType } from '../lib/airtable';

interface Props {
  pricingType: PricingType;
  hasFreeTrial: boolean;
  registrationRequired: boolean;
  lastVerifiedAt: string | null;
  isClosed: boolean;
}

const { pricingType, hasFreeTrial, registrationRequired, lastVerifiedAt, isClosed } = Astro.props;

const pricingLabels: Record<PricingType, string> = {
  free: '完全無料',
  partially_paid: '一部有料プランあり',
  fully_paid: '有料サービス',
  unknown: '料金体系不明',
};

const pricingColors: Record<PricingType, string> = {
  free: 'bg-green-50 border-green-200 text-green-800',
  partially_paid: 'bg-blue-50 border-blue-200 text-blue-800',
  fully_paid: 'bg-orange-50 border-orange-200 text-orange-800',
  unknown: 'bg-gray-50 border-gray-200 text-gray-600',
};

function formatDate(dateString: string | null): string {
  if (!dateString) return '不明';
  const date = new Date(dateString);
  return date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' });
}
---

<div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
  <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    料金・サービス情報
  </h3>

  {isClosed && (
    <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md">
      <p class="text-sm text-red-800 font-medium flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        このサイトは閉鎖されている可能性があります
      </p>
    </div>
  )}

  <div class="space-y-3">
    <!-- 料金体系 -->
    <div class={`p-4 rounded-md border ${pricingColors[pricingType]}`}>
      <div class="flex items-center justify-between">
        <span class="font-bold text-lg">{pricingLabels[pricingType]}</span>
        {pricingType === 'free' && (
          <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        )}
      </div>
    </div>

    <!-- バッジ -->
    <div class="flex flex-wrap gap-2">
      {hasFreeTrial && (
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800 border border-purple-200">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          無料お試しあり
        </span>
      )}

      {registrationRequired && (
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-700 border border-gray-200">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
          </svg>
          会員登録必要
        </span>
      )}

      {!registrationRequired && (
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-700 border border-green-200">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          登録不要
        </span>
      )}
    </div>

    <!-- 最終確認日 -->
    {lastVerifiedAt && (
      <div class="pt-3 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          <span class="font-medium">最終確認日:</span> {formatDate(lastVerifiedAt)}
        </p>
      </div>
    )}
  </div>

  <!-- 情報の報告 -->
  <div class="mt-4 pt-4 border-t border-gray-200">
    <button
      type="button"
      id="report-outdated-btn"
      class="text-sm text-gray-600 hover:text-gray-900 underline"
    >
      情報が古い・間違っている場合は報告
    </button>
  </div>

  <!-- 報告フォーム（モーダル） -->
  <div id="report-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg max-w-md w-full p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">情報の報告</h3>
      <p class="text-sm text-gray-600 mb-4">
        古い情報や間違っている箇所をお知らせください。運営チームが確認いたします。
      </p>
      <form id="report-form" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">問題の内容 *</label>
          <select id="report-type" class="form-input w-full" required>
            <option value="">選択してください</option>
            <option value="pricing">料金体系が違う</option>
            <option value="closed">サイトが閉鎖されている</option>
            <option value="url">URLが間違っている</option>
            <option value="registration">会員登録の要否が違う</option>
            <option value="other">その他</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">詳細（任意）</label>
          <textarea id="report-details" class="form-input w-full" rows="3" placeholder="具体的な内容をご記入ください"></textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">メールアドレス（任意）</label>
          <input type="email" id="report-email" class="form-input w-full" placeholder="回答が必要な場合はご記入ください" />
        </div>
        <div class="flex gap-2 justify-end">
          <button type="button" id="cancel-report-btn" class="px-4 py-2 text-sm text-gray-700 bg-gray-100 rounded hover:bg-gray-200">
            キャンセル
          </button>
          <button type="submit" class="px-4 py-2 text-sm text-white bg-blue-600 rounded hover:bg-blue-700">
            送信
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const reportBtn = document.getElementById('report-outdated-btn');
    const modal = document.getElementById('report-modal');
    const cancelBtn = document.getElementById('cancel-report-btn');
    const reportForm = document.getElementById('report-form') as HTMLFormElement;

    if (!reportBtn || !modal || !cancelBtn || !reportForm) return;

    // モーダルを開く
    reportBtn.addEventListener('click', () => {
      modal.classList.remove('hidden');
    });

    // モーダルを閉じる
    cancelBtn.addEventListener('click', () => {
      modal.classList.add('hidden');
      reportForm.reset();
    });

    // 背景クリックで閉じる
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.add('hidden');
        reportForm.reset();
      }
    });

    // フォーム送信
    reportForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const reportType = (document.getElementById('report-type') as HTMLSelectElement).value;
      const details = (document.getElementById('report-details') as HTMLTextAreaElement).value;
      const email = (document.getElementById('report-email') as HTMLInputElement).value;

      if (!reportType) {
        alert('問題の内容を選択してください');
        return;
      }

      const siteId = window.location.pathname.split('/').filter(Boolean).pop();

      try {
        const submitBtn = reportForm.querySelector('button[type="submit"]') as HTMLButtonElement;
        submitBtn.disabled = true;
        submitBtn.textContent = '送信中...';

        const response = await fetch('/api/reports/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            siteSlug: siteId,
            reportType,
            details,
            email,
          }),
        });

        if (!response.ok) {
          throw new Error('送信に失敗しました');
        }

        alert('報告ありがとうございました。運営チームが確認いたします。');
        modal.classList.add('hidden');
        reportForm.reset();
      } catch (error) {
        alert('エラーが発生しました。もう一度お試しください。');
      } finally {
        const submitBtn = reportForm.querySelector('button[type="submit"]') as HTMLButtonElement;
        submitBtn.disabled = false;
        submitBtn.textContent = '送信';
      }
    });
  });
</script>
