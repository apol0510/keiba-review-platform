---
interface Props {
  category: 'nankan' | 'chuo' | 'chihou' | 'other';
  size?: 'sm' | 'md';
}

const { category, size = 'md' } = Astro.props;

const labels: Record<string, string> = {
  nankan: '南関競馬',
  chuo: '中央競馬',
  chihou: '地方競馬',
  other: 'その他',
};

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-2.5 py-1',
};
---

<span class={`inline-block rounded-full font-medium badge-${category} ${sizeClasses[size]}`}>
  {labels[category]}
</span>
